<body>
    <canvas id="canvas" oncontextmenu="event.preventDefault()"></canvas>
    <script type='text/javascript'>
        var canv = document.getElementById('canvas');
        var Module = {
            canvas: canv
        };
    </script>
    <script src="wasm/index.js"></script>
    <script type='text/javascript'>
        console.log(__clickLeft);
        canv.addEventListener('click', __clickLeft, false);
        canv.addEventListener('touchend', __clickLeft, false);
        window.addEventListener('keydown', function (e) {
            if( e.key == 'f'){
                canv.webkitRequestFullScreen();
            }
           __keyboardDown( e.keyCode );
        });

        window.addEventListener('keyup', function (e) {
           __keyboardUp(e.keyCode );
        });

        canv.addEventListener('mousemove', function(e){
            //console.log(e.movementX, e.movementY);
            __mouseMove(e.movementX, e.movementY);
        })
    </script>
